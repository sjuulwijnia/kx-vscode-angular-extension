{
	"name": "kx-vscode-angular-extension",
	"displayName": "kx-vscode-angular-extension",
	"description": "",
	"version": "0.0.1",
	"publisher": "sjuulwijnia",
	"engines": {
		"vscode": "^1.18.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"workspaceContains:**/.angular-cli.json"
	],
	"main": "./out/extension",
	"contributes": {
		"commands": [
			{
				"command": "kx-vscode-angular-extension.createAngularComponent",
				"category": "kx-vscode-angular-extension",
				"title": "New Angular component..."
			},
			{
				"command": "kx-vscode-angular-extension.createAngularDirective",
				"category": "kx-vscode-angular-extension",
				"title": "New Angular directive..."
			},
			{
				"command": "kx-vscode-angular-extension.createAngularPipe",
				"category": "kx-vscode-angular-extension",
				"title": "New Angular pipe..."
			},
			{
				"command": "kx-vscode-angular-extension.createAngularService",
				"category": "kx-vscode-angular-extension",
				"title": "New Angular service..."
			}
		],
		"configuration": [
			{
				"type": "object",
				"title": "kx-vscode-angular-extension",
				"properties": {
					"kx-vscode-angular-extension.addToNgModule": {
						"type": "boolean",
						"default": true,
						"description": "When true, the created option will be added to the nearest NgModule it can find."
					},
					"kx-vscode-angular-extension.containerBarrelFile": {
						"type": "boolean",
						"default": true,
						"description": "When true, it will create a barrel file (index.ts) when a container directory is used. Defaults to true."
					},
					"kx-vscode-angular-extension.containerSuffix": {
						"type": "boolean",
						"default": false,
						"description": "When true, the container component will also be suffixed (e.g.: 'dashboard-item.component'), when false, it will not be suffixed (e.g.: 'dashboard-item'). Defaults to false."
					},
					"kx-vscode-angular-extension.openCreatedFile": {
						"type": "boolean",
						"default": true,
						"description": "When true, it will automagically open the created files. Defaults to true."
					}
				}
			}
		],
		"configurationDefaults": {
			"kx-vscode-angular-extension.addToNgModule": true,
			"kx-vscode-angular-extension.containerBarrelFile": true,
			"kx-vscode-angular-extension.containerSuffix": false,
			"kx-vscode-angular-extension.openCreatedFile": true
		},
		"menus": {
			"explorer/context": [
				{
					"command": "kx-vscode-angular-extension.createAngularComponent",
					"group": "kx-vscode-angular-extension"
				},
				{
					"command": "kx-vscode-angular-extension.createAngularDirective",
					"group": "kx-vscode-angular-extension"
				},
				{
					"command": "kx-vscode-angular-extension.createAngularPipe",
					"group": "kx-vscode-angular-extension"
				},
				{
					"command": "kx-vscode-angular-extension.createAngularService",
					"group": "kx-vscode-angular-extension"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^2.6.1",
		"vscode": "^1.1.6",
		"@types/node": "^7.0.43",
		"@types/mocha": "^2.2.42"
	},
	"dependencies": {
		"editorconfig-parser": "0.0.2"
	}
}